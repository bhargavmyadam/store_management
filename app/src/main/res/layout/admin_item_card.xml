<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/ll_customer"
            >

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/cardview_compat_inset_shadow"
                android:layout_marginLeft="@dimen/cardview_compat_inset_shadow"
                android:layout_marginRight="@dimen/cardview_compat_inset_shadow"
                android:gravity="center_horizontal"
                android:padding="@dimen/cardview_default_elevation"
                android:text="DATE"
                android:textAllCaps="true"
                android:textAlignment="center"
                android:textSize="16sp"
                android:background="@color/md_purple_50"
                android:fontFamily="@font/baloo_bhaina"

                android:textColor="@color/md_teal_300"/>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/md_purple_A100">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/cardview_compat_inset_shadow"
                    android:layout_marginLeft="@dimen/cardview_compat_inset_shadow"
                    android:layout_marginRight="@dimen/cardview_compat_inset_shadow"
                    android:gravity="center_horizontal"
                    android:padding="@dimen/cardview_default_elevation"
                    android:text="ADMIN NAME"
                    android:textAllCaps="true"
                    android:textAlignment="center"
                    android:textSize="10sp"
                    android:fontFamily="@font/baloo_bhaina"
                    android:background="@color/md_purple_A100"
                    android:textColor="@color/md_teal_300"/>

                <TextView
                    android:id="@+id/tv_admin_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/cardview_compat_inset_shadow"
                    android:layout_marginLeft="@dimen/cardview_compat_inset_shadow"
                    android:layout_marginRight="@dimen/cardview_compat_inset_shadow"
                    android:fontFamily="@font/baloo_bhaina"
                    android:gravity="center_horizontal"
                    android:padding="@dimen/cardview_default_elevation"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textColor="@color/md_teal_300"
                    android:textSize="10sp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/md_purple_A100">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/cardview_compat_inset_shadow"
                    android:layout_marginLeft="@dimen/cardview_compat_inset_shadow"
                    android:layout_marginRight="@dimen/cardview_compat_inset_shadow"
                    android:gravity="center_horizontal"
                    android:padding="@dimen/cardview_default_elevation"
                    android:text="ADMIN EMAIL"
                    android:textAllCaps="true"
                    android:textAlignment="center"
                    android:textSize="10sp"
                    android:fontFamily="@font/baloo_bhaina"
                    android:background="@color/md_purple_A100"
                    android:textColor="@color/md_teal_300"/>

                <TextView
                    android:id="@+id/tv_admin_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/cardview_compat_inset_shadow"
                    android:layout_marginLeft="@dimen/cardview_compat_inset_shadow"
                    android:layout_marginRight="@dimen/cardview_compat_inset_shadow"
                    android:fontFamily="@font/baloo_bhaina"
                    android:gravity="center_horizontal"
                    android:padding="@dimen/cardview_default_elevation"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textColor="@color/md_teal_300"
                    android:textSize="10sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/md_purple_A100">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/cardview_compat_inset_shadow"
                    android:layout_marginLeft="@dimen/cardview_compat_inset_shadow"
                    android:layout_marginRight="@dimen/cardview_compat_inset_shadow"
                    android:gravity="center_horizontal"
                    android:padding="@dimen/cardview_default_elevation"
                    android:text="ITEM NAME"
                    android:textAllCaps="true"
                    android:textAlignment="center"
                    android:textSize="10sp"
                    android:fontFamily="@font/baloo_bhaina"
                    android:background="@color/md_purple_A100"
                    android:textColor="@color/md_teal_300"/>

                <TextView
                    android:id="@+id/tv_item_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/cardview_compat_inset_shadow"
                    android:layout_marginLeft="@dimen/cardview_compat_inset_shadow"
                    android:layout_marginRight="@dimen/cardview_compat_inset_shadow"
                    android:fontFamily="@font/baloo_bhaina"
                    android:gravity="center_horizontal"
                    android:padding="@dimen/cardview_default_elevation"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textColor="@color/md_teal_300"
                    android:textSize="10sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/md_purple_A100">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/cardview_compat_inset_shadow"
                    android:layout_marginLeft="@dimen/cardview_compat_inset_shadow"
                    android:layout_marginRight="@dimen/cardview_compat_inset_shadow"
                    android:gravity="center_horizontal"
                    android:padding="@dimen/cardview_default_elevation"
                    android:text="QUANTITY"
                    android:textAllCaps="true"
                    android:textAlignment="center"
                    android:textSize="10sp"
                    android:fontFamily="@font/baloo_bhaina"
                    android:background="@color/md_purple_A100"
                    android:textColor="@color/md_teal_300"/>

                <TextView
                    android:id="@+id/tv_qty"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/cardview_compat_inset_shadow"
                    android:layout_marginLeft="@dimen/cardview_compat_inset_shadow"
                    android:layout_marginRight="@dimen/cardview_compat_inset_shadow"
                    android:fontFamily="@font/baloo_bhaina"
                    android:gravity="center_horizontal"
                    android:padding="@dimen/cardview_default_elevation"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textColor="@color/md_teal_300"
                    android:textSize="10sp" />
            </LinearLayout>


        </LinearLayout>
    </ScrollView>
</androidx.cardview.widget.CardView>